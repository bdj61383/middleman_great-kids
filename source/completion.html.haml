		%p 
			Coming up 
			%strong tomorrow:
			%h4 Try something new
	%ul.completed
		%p Completed themes
		%li
			%a{:href=>'#'}
				%div.date 
					Today! 
					%br
					&#x2713
				%div.theme
					%h4 
						=data.theme.title
					%div#improvement
				%div.arrow >
