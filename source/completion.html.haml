					%h4 Mental Magic: Adding
					%div Solved 20 puzzles
				%div.arrow >
				%div.badges
					=image_tag 'badge2.png'
		%li
			%a{:href=>'#'}
				%div.date 
					11/7
					%br
					&#x2713
				%div.theme
					%h4 Success Box
					%div Hard work pays off...
				%div.arrow >
				%div.badges
					=image_tag 'badge3.png'
