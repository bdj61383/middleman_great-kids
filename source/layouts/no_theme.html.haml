!!! html
%html 
	%head
		%meta{:charset=>'utf-8'}
		%meta{:content=>'IE=edge,chrome=1', 'http-equiv'=>'X-UA-Compatible'}
		%meta{:name=>"viewport", :content=>"width=device-width, initial-scale=1, maximum-scale=1"}
		%title 
			= "GreatKids - " + data.theme.title || "GreatKids"
		= stylesheet_link_tag "normalize", "bootstrap", "bootstrap-responsive", "all", "responsive"
		= javascript_include_tag  "jquery-1.8.3.min.js", "all", "bootstrap"
	%body
		%div.navbar.navbar-inverse.navbar-static-top.no_theme
			%div.navbar-inner
				%div.container-fluid
					%a.btn.btn-navbar{:data=>{:toggle=>'collapse', :target=>'.nav-collapse'}}
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
					%a.brand Great Kids
					%div.nav-collapse.collapse
						%ul.nav
							%li
								%a{:href=>'#'} Home
							%li 
								%a{:href=>'#about'} Journal
							%li 
								%a{:href=>'#contact'} Settings
							%li
								%a.pull-right{:href=>'#contact'} Log Out
		%div.clear
		= yield