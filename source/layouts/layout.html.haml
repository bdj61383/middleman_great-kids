!!! html
%html 
	%head
		%meta{:charset=>'utf-8'}
		%meta{:content=>'IE=edge,chrome=1', 'http-equiv'=>'X-UA-Compatible'}
		%meta{:name=>"viewport", :content=>"width=device-width, initial-scale=1, maximum-scale=1"}
		%title 
			= "GreatKids - " + data.theme.title || "GreatKids"
		= stylesheet_link_tag "normalize", "bootstrap", "bootstrap-responsive", "all", "responsive"
		= javascript_include_tag  "jquery-1.8.3.min.js", "all", "bootstrap"
	%body
		%div.navbar.navbar-inverse.navbar-static-top
			%div.navbar-inner
				%div.container-fluid
					/ %a.btn.btn-navbar.collapsed{:data=>{:toggle=>'collapse', :target=>'.navbar-responsive-collapse'}}
					%div.btn.btn-navbar.collapsed#navbar_button
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
					%a.brand Great Kids
					%div.nav-collapse.collapse.navbar-responsive-collapse#nav_collapse
						%ul.nav
							%li
								%a{:href=>'#'} Home
							%li 
								%a{:href=>'#about'} Journal
							%li 
								%a{:href=>'#contact'} Settings
							%li
								%a.pull-right{:href=>'#contact'} Log Out
		%div.clear
		%h1.theme_title 
			=data.theme.title
		= yield

-# This corrects for a bug in the twitter bootstrap dropdown behavior, where the dropdown menu cannot be closed once opened.
:javascript
	$('#navbar_button').on('click', function(){
		if ($('#nav_collapse').height() == 0) {
			$('#nav_collapse').height('100%')
		}
		else {
			$('#nav_collapse').height(0)
		}
	})