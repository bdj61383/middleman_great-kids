!!! html
%html 
	%head
		%meta{:charset=>'utf-8'}
		%meta{:content=>'IE=edge,chrome=1', 'http-equiv'=>'X-UA-Compatible'}
		%meta{:name=>"viewport", :content=>"width=device-width, initial-scale=1, maximum-scale=1"}
		%title 
			= "GreatKids"
		= stylesheet_link_tag "normalize", "bootstrap", "bootstrap-responsive", "dashboard"
		= javascript_include_tag  "jquery-1.8.3.min.js", "all", "bootstrap"
	%header.container
		%div.row
			%div.span1.avatar 
				=image_tag 'frog.png'
				-# %h4 Johnny
			%div.span1.global_starcount
				=image_tag 'star.png'
				%span#global_starcount (50)
			%div.span1.global_badgecount
				=image_tag 'badge_icon.png'
				%span#global_starcount (0)
			%h1 GreatKids
			
	%body
		%div.container
			= yield