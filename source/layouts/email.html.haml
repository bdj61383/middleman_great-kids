!!! html
%html 
	%head
		%meta{:charset=>'utf-8'}
		%meta{:content=>'IE=edge,chrome=1', 'http-equiv'=>'X-UA-Compatible'}
		%meta{:name=>'viewport', :content => 'width=device-width, initial-scale=1, maximum-scale=1'}
		%title 
			= "GreatKids - " + data.theme.title || "GreatKids"
		= stylesheet_link_tag "normalize", "bootstrap", "bootstrap-responsive", "all", "responsive"
		= javascript_include_tag  "jquery-1.8.3.min.js", "all", "bootstrap"
	%body
		%header.email
			%div.from 
				From: 
				%span GreatKids >
			%div.to 
				To: 
				%span Betty Smith >
		= yield